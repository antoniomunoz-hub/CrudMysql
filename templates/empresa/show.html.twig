{% extends 'base.html.twig' %}

{% block title %}Hello EmpresaController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <table>
        <thead>
        
            <tr>
                <td>Id</td>
                <td>Nombre</td>
                <td>Telefono</td>
                <td>Email</td>
                <td>Sector</td>
                <td>Editar</td>
                <td>Eliminar</td>
            </tr>
        
        </thead>

        <tbody>
    {% for empresa in empresas %}
        <tr>
            <td>{{empresa.id}}</td>
            <td>{{empresa.nombre}}</td>
            <td>{{empresa.telefono}}</td>
            <td>{{empresa.email}}</td>
            <td>{{empresa.Sector.nombre}}</td>
            <td><a href="/empresa/{{empresa.id}}"><button>Editar</button></a></td>
            <td><a href="/empresa/delete/{{empresa.id}}" onclick="return confirm('Â¿Desea Eliminar La Empresa?')"><button class="delete">Eliminar</button></a></td>
        </tr>
        
    {% else %}
        No existen Registros.
{% endfor %}
<a href="/empresa/add"><button>Nueva Empresa</button></a>
</div>
{% endblock %}